<% title = admin.t("titles.edit", default: "Editing %{model_name}") %>

<% content_for(:title, title) %>
<% breadcrumb(title) %>

<% toolbar(:primary) do |t| %>
  <%= t.save_or_dismiss(:update) %>
<% end %>

<% toolbar(:secondary) do |t| %>
  <%= t.delete %>
<% end %>

<% var_url    = admin.actions.include?(:update) ? admin.instance_path(instance, action: :update) : "#" %>
<% var_layout = dialog_request? ? "dialog" : "layout" %>

<%= trestle_form_for(instance, url: var_url, method: :patch) do |f| %>
  <%= render(partial: "form", layout: var_layout) %>
<% end %>
