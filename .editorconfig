root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 255
trim_trailing_whitespace = true

[*.{rb,rake}]
indent_size = 2

[*.html.erb]
indent_size = 4

[*.json]
indent_size = 4

[*.mjs]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{csv,tsv}]
trim_trailing_whitespace = false
insert_final_newline = false

[*.tsv]
indent_style = tab
